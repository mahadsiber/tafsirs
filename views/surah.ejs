<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= name %></title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .highlight {
            background-color: yellow;
        }
        .highlight-link {
            cursor: pointer;
            color: blue;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Tafsir al-Kabir (Fakhrudin ar-Razi)</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/#baca">Baca</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/#cari">Cari</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/#tanya">Tanya</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <div id="highlight-links" class="mb-3"></div>
        <h2><%= name %></h2>
        <div class="card">
            <div class="card-body" id="surah-content">
                <%- content %>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function() {
            const query = new URLSearchParams(window.location.search).get('query');
            if (query) {
                const content = $('#surah-content').html();
                const highlightedContent = content.replace(new RegExp(query, 'gi'), match => `<span class="highlight" id="highlight-${match}">${match}</span>`);
                $('#surah-content').html(highlightedContent);

                // Generate links to highlighted text
                const highlights = $('.highlight');
                const highlightLinks = [];
                highlights.each(function(index) {
                    const text = $(this).text();
                    const id = `highlight-${index}`;
                    $(this).attr('id', id);
                    highlightLinks.push(`<a class="highlight-link" data-id="${id}">${text}</a>`);
                });
                $('#highlight-links').html(highlightLinks.join(' | '));

                // Scroll to highlighted text when link is clicked
                $('.highlight-link').on('click', function() {
                    const id = $(this).data('id');
                    const target = $(`#${id}`);
                    if (target.length) {
                        $('html, body').animate({
                            scrollTop: target.offset().top - 100
                        }, 1000);
                    }
                });
            } else {
                // Hide the highlight links section if no query parameter
                $('#highlight-links').hide();
            }
        });
    </script>
</body>
</html>